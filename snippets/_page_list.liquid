{% assign sub_pages = page.children_in_list %}

<div class="mt-4">
  <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 xl:grid-cols-3 ">
    {% for sub_page in sub_pages %}
      <div class="p-2 md:p-4 flex flex-col rounded-md space-y-3 md:space-y-5 border hover:bg-slate-100">
        <div class="flex items-center space-x-2">
          {% if sub_page.settings.icon %}
            <span class="mr-4"><img src="{{ sub_page.settings.icon }}" class="h-6"/> </span>
          {% else %}
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
            </svg>
          {% endif %}
          <a class="mt-1 text-base font-semibold hover:text-primary" href="{{ sub_page.path }}">
            {{ sub_page.link_text }}
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>