{% assign pages = page.children_in_list %}
{% assign thumb = 'images/thumbnail.png' | asset_url %}
<a name="blog"></a>

<!-- Page header -->
<div class="mx-auto max-w-screen-xl px-4 pt-6 sm:px-8 lg:pt-12 lg:px-12">
  <div class="flex flex-col w-full max-w-screen-xl mx-auto space-y-6 lg:justify-between lg:items-end lg:flex-row">
    <div class="max-w-2xl">
      <div class="flex items-center space-x-1">
        {% if page.settings.icon %}
          <span class="relative w-12 h-12 bg-secondary/20 rounded-full mr-2">
            <img src="{{ page.settings.icon }}" class="h-10"/>
          </span>
        {% endif %}
        <span class="block text-sm font-bold tracking-widest uppercase text-slate-600">{{ page.settings.title }}</span>
      </div>
      <h1 class="mt-3 text-2xl font-bold text-primary md:text-4xl">{{ page.settings.description }}</h1>
    </div>
  </div>
</div>
<!--/ Page header -->

<div class="relative">
  <div class="mx-auto max-w-screen-xl px-6 lg:px-8 mb-8">

    <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-10 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      {%# 分页 %}
      {% paginate_tag pages, per: 24 %}
        {% for sub_page in pages %}
          <article class="flex flex-col">
            {%- if page.settings.is_allow_thumb -%}
              <div class="relative w-full">
                <img src="{{ sub_page.settings.thumb_image_url | default: thumb }}" alt="{{ sub_page.link_text }}"
                  class="aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]">
                <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
              </div>
            {%- endif -%}
            <div class="max-w-xl">
              <div class="mt-2 flex items-center gap-x-2 text-xs">
                {% for tag in sub_page.settings.tags | limit: 3 %}
                  <a href="{{ tag.path }}" class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">{{ tag.name }}</a>
                {% endfor %}
              </div>
              <div class="group relative">
                <h3 class="mt-3 text-xl md:text-2xl font-semibold leading-6 group-hover:text-gray-600">
                  <a href="{{ sub_page.path }}">
                    <span class="absolute inset-0"></span>
                    {{ sub_page.link_text }}
                  </a>
                </h3>
                <p class="mt-2 line-clamp-3 text-sm leading-6 text-gray-600">{{ sub_page.settings.description }}</p>
              </div>
              <div class="flex justify-between my-2">
                <div>
                  {%- if site.settings.is_allow_author -%}
                    <div class="relative flex items-center gap-x-2">
                      <img src="{{ page.author.avatar_url }}" alt="" class="h-6 w-6 rounded-full bg-gray-100">
                      <div class="text-sm leading-6">
                        <p class="font-semibold">
                          <a href="javascript:void(0);">
                            <span class="absolute inset-0"></span>
                            {{ page.author.name }}
                          </a>
                        </p>
                      </div>
                    </div>
                  {%- endif -%}
                </div>
                <div>
                  {%- if site.settings.is_allow_published_at -%}
                    <time datetime="{{ sub_page.published_at }}" class="text-sm">{{ sub_page.published_at | date: "%Y-%m-%d" }}</time>
                  {%- endif -%}
                </div>
              </div>

            </div>
          </article>
        {% endfor %}
        <!-- Pagination -->
        {% render 'paginate', paginate: paginate %}
      {% endpaginate_tag %}
      <!-- More posts... -->
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Blog",
    "thumb_url": "images/theme/blog.png",
    "description": "博客栏目的首页",
    "sub_page_templates": ["blog_post"],
    "settings": [
      {
        "id": "title",
        "type": "text",
        "placeholder": "",
        "label": "标题"
      },
      {
        "id": "description",
        "type": "textarea",
        "label": "描述",
        "default": "A place to share our thoughts and insights"
      },
      {
          "id": "icon",
          "type": "image_picker",
          "ratio": "1:1",
          "width": 60,
          "label": "图标"
      },
      {
        "id": "is_allow_thumb",
        "type": "checkbox",
        "label": "是否展示封面",
        "default": true
      },
      {
        "id": "recommend_to_index",
        "type": "checkbox",
        "label": "推荐到首页展示",
        "default": true
      }
    ]
  }
{% endschema%}
