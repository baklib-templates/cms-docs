{% assign default_hero_image = 'images/hero.jpg' | asset_url %}
{% assign hot_tags = page.settings.hot_tags | split: ',' %}
{% assign limit_page_count = 3 %}
{% assign channel_pages = site.pages['/'].children_in_nav_menu %}

<section class="relative bg-slate-100 dark:bg-slate-700">
  {% # Hero èƒŒæ™¯å¤§å›¾+æœç´¢æ¡† %}
  <div
    class="flex items-center justify-center flex-col bg-no-repeat bg-cover bg-center bg-primary/40 dark:bg-primary/120 h-[200px] md:h-[300px]"
    style="background-image: url({{ page.settings.hero_image_url | default: default_hero_image }})">
    <div class="flex flex-1 justify-center items-center py-3 w-full">
      <div class="container flex flex-col px-4 mx-auto h-full">
        <div class="flex flex-col flex-grow justify-center items-center">
          <h1 class="py-2 mt-12 text-4xl font-bold text-white transition duration-500 md:mt-0 text-shadow">
            {{ page.settings.title | default: site.name }}
          </h1>
          <p class="py-2 text-base text-white transition duration-500 text-shadow">{{ page.settings.description }}</p>

          <div class="flex z-0 flex-col justify-center items-center w-full md:w-2/3">
            {% form_tag 'search', class: 'w-full' %}
              <div class="relative mx-auto max-w-2xl shadow-sm">
                <button type="submit" class="flex absolute inset-y-0 right-0 items-center pr-3 pl-4 sm:right-auto">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-5 h-5 text-primary"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                </button>
                <input
                  type="text"
                  name="{{form.keywords_field_name}}" value="{{ search.keywords | escape_once }}"
                  placeholder="{{ "placeholders.search" | t }}"
                  autocomplete="off"
                  class="block pr-10 pl-3 w-full h-10 bg-white bg-opacity-75 rounded-full border border-transparent transition duration-300 ease-in-out outline-none focus:ring-0 focus:border-primary sm:pl-12 sm:text-lg md:h-12 lg:h-14 focus:bg-opacity-90"
                >
              </div>
            {% endform_tag %}
            <div class="hidden overflow-hidden justify-center items-center mt-4 w-full md:flex">
              {% for search_hot_key in hot_tags %}
                <a
                  href="{{site.index_path}}-/search?q={{ search_hot_key }}"
                  class="px-2 py-1 mr-3 text-sm text-white rounded-2xl border border-white hover:bg-slate-100/50 hover:text-white focus:ring"
                >
                  {{ search_hot_key }}
                </a>
              {% endfor %}
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

  {% # æ ç›® Card åˆ—è¡¨ %}
  <div class="bg-transparent">
    <div class="px-4 mx-auto mt-8 max-w-7xl sm:px-6">
      {% # åˆ—è¡¨æŒ‡å—- Guide %}
      <div class="grid grid-cols-1 gap-8 items-start lg:max-w-none md:grid-cols-2 lg:grid-cols-3 lg:gap-x-12 lg:gap-y-16">
        <!-- è‡ªå®šä¹‰ First Card -->
        {% for card_page in channel_pages %}
          {% if card_page.settings.recommend_to_index == false %}
            {% continue %}
          {% else %}
            <!-- Card -->
            <div class="flex overflow-hidden flex-col h-full bg-white dark:bg-slate-800 text-slate-800 dark:text-slate-200">
              <!-- Image -->
              <!-- Card Content -->
              <div class="flex flex-col flex-1 p-6">
                  <!-- Card body -->
                  <div class="flex-1">
                      <!-- Header -->
                      <header class="mb-2">
                        <div class="flex justify-start items-center">
                          {% if card_page.settings.icon %}
                            <div class="relative mr-2 w-10 h-10 rounded-full">
                              <img src="{{ card_page.settings.icon }}" class="items-center h-10"/>
                            </div>
                          {% endif %}
                          <a class="text-xl font-semibold hover:text-primary" href="{{ card_page.path }}">
                            <h3 class="line-clamp-1">{{ card_page.link_text }}</h3>
                          </a>
                        </div>
                      </header>
                      <!-- Content -->
                      <div class="my-4">
                        <ul>
                          {% assign sub_pages = card_page.children_in_list | limit: limit_page_count %}
                          {% for sub_page in sub_pages %}
                            <li class="mt-2 truncate">
                              <a
                                href="{{ sub_page.path }}"
                                class="relative transition duration-500 group text-gray-550 text-tiny hover:text-primary"
                              >
                                <span
                                  class="inline-block absolute top-2 w-1.5 h-1.5 bg-gray-400 rounded-full border-0 transition duration-500 group-hover:bg-primary"
                                ></span>
                                <span class="ml-4 line-clamp-1">{{ sub_page.link_text }}</span>
                              </a>
                            </li>
                          {% endfor %}
                        </ul>
                      </div>
                  </div>
                  <!-- Card footer -->
                  <div class="flex justify-end pt-3 space-x-2 border-t border-slate-200 dark:border-gray-700 md:pt-5">
                    <a href="{{ card_page.path }}" class="cursor-pointer text-primary">{{ 'generic.read_more' | t}}</a>
                  </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>


      {% # ç‰¹æ®Šå®šåˆ¶é¡µé¢ %}
      <!-- features -->
      {{ site.settings.features_one }}
      <!--/ features-->


      {% # çƒ­é—¨è¯é¢˜ %}
      {% assign faq_pages = site.pages['/'].pages | order_by: '-visits_count' | limit: 10 %}
      <div class="pt-4 pb-8 mt-8 lg:mt-14 lg:pb-12">
        {% # æ ‡é¢˜ %}
        <div class="flex items-center mb-8 h-8 text-2xl font-bold text-slate-800 dark:text-slate-200">
          <div class="mr-3 w-1 h-full bg-primary"></div>
          <span>{{ 'generic.hot_pages' | t }}</span>
        </div>
        <div class="grid grid-cols-1 gap-y-0 gap-4 md:grid-cols-2">
          {% for faq_page in faq_pages %}
            <a
              class="flex relative justify-between items-center px-5 py-3 transition transform group md:relative page--article__link"
              href="{{ faq_page.path }}"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="hidden left-3 w-5 h-5 text-gray-400 transition md:block md:absolute group-hover:text-primary"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1"
                  d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
              <h6 class="mr-2 ml-2 transition md:ml-6 text-gray-550 dark:text-white group-hover:text-primary">
                {{ faq_page.link_text }}
              </h6>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="flex-shrink-0 mr-4 w-5 h-5 text-gray-500 transition group-hover:text-primary group-hover:translate-x-3 md:transform"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1"
                  d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          {% endfor %}
        </div>
      </div>

      {% # ç‰¹æ®Šå®šåˆ¶é¡µé¢ %}
      <!-- features -->
      {{ site.settings.features_two }}
      <!--/ features-->

    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Help Center",
    "thumb_url": "images/theme/index-help-center.png",
    "preview_image_urls": [
