    "description": "Help Center, Customer Support",
    "sub_page_templates": [
      "channel","support","blog","videos","changelog","faq","page"
    ],
    "settings": [
      {
        "id": "hero_image_url",
        "type": "image_picker",
        "ratio": "19:6",
        "width": 900,
        "label": "t:settings_schema.generic.settings.hero_image_url.label",
        "info": "t:settings_schema.generic.settings.hero_image_url.info"
      },
      {
        "id": "title",
        "type": "text",
        "label": "t:settings_schema.generic.settings.title.label",
        "default": "The Support Portal"
      },
      {
        "id": "description",
        "type": "text",
        "label": "t:settings_schema.generic.settings.description.label",
        "default": "ğŸ‘‹ What Can We Help?"
