      {
        "id": "card_page_count",
        "type": "number",
        "min": 1,
        "max": 8,
        "step": 1,
        "default": 4,
        "label": "é¦–é¡µåˆ—è¡¨å±•ç¤ºé¡µé¢æ•°é‡",
        "info": ""
      }
    ]

  }

{% endschema %}
