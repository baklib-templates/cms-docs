<div class="bg-accent/30 dark:bg-slate-700">
  <div class="py-4 mx-auto truncate max-w-5xl">
    {% render 'breadcrumb', breadcrumb: page.breadcrumb %}
  </div>
</div>

<div class="mx-auto max-w-5xl my-4 p-4 lg:my-8 lg:p-8">
  <!-- Main 3 column grid -->
  <div class="flex">
    <!-- Left column -->
    <div class="grow">
      <section aria-labelledby="section-1-title" class="px-4 lg:px-0">
        <h2 class="sr-only" id="section-1-title">{{ page.link_text  }}</h2>
        <div class="overflow-auto">

          <h1 class="mb-4 font-bold leading-normal md:mb-8 text-3xl md:text-4xl md:text-heading-1">
            {{ page.settings.title }}</h1>

          <article class="max-w-full">
            <div class="overflow-auto">
              <div class="ProseMirror text-wrap">
                {{ page.settings.content }}
              </div>
            </div>
          </article>

          <!-- Sub Post Section -->
          {% render 'pages', page: page, show_header: false %}
        </div>
      </section>
    </div>
  </div>
</div>


<!--/ article-->
{% schema %}
  {
    "name": "FAQ文章详情",
    "thumb_url": "images/theme/page.png",
    "description": " FAQ文章详情模板",
    "sub_page_templates": [],
    "settings": [
      {
        "id": "title",
        "type": "text",
        "placeholder": "",
        "label": "FAQ 问题"
      },
      {
        "id": "content",
        "type": "richtext",
        "label": "FAQ 回答"
      }
    ]
  }
{% endschema %}